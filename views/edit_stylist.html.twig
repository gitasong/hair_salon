<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <title>Famous Stylists Hair Salon</title>
    </head>
    <body>
        <h1>Famous Stylists Hair Salon</h1>

        <h3>Edit Stylist: {{ stylist.getName }}</h1>

        <form action="/stylists/{{ stylist.getID }}" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="name">Rename Stylist:</label>
            <input id="name" name="name" type="text" required>

            <button type="submit">Update</button>
        </form>

        <form action="/stylists/{{ stylist.getID }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit">Delete Stylist</button>
        </form>
        <p><a href='/'>Home</a></p>
    </body>
</html>
